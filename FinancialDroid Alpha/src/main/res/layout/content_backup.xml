<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bagarrao.financialdroid.BackupActivity"
    tools:showIn="@layout/activity_backup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/autoBackupTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Backup data whenever FinancialDroid starts:" />

        <Switch
            android:id="@+id/autoBackupSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/backupListTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available backups:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/backupListListview"
            android:layout_width="200dp"
            android:layout_height="300dp"></ListView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/backupInfoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text" />

            <Button
                android:id="@+id/deleteBackupButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="delete backup" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/resetBackupFilesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Erase all backups" />

    <Button
        android:id="@+id/newBackupFileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do a new backup" />

</LinearLayout>
